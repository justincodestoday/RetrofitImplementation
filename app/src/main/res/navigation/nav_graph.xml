<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/toSignInFragment"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/toHomeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/signInFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/toSignUpFragment"
        app:destination="@id/signUpFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.justin.productcatalog.ui.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_updateProductFragment"
            app:destination="@id/updateProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.justin.productcatalog.ui.presentation.product.AddProductFragment"
        android:label="AddProductFragment"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/updateProductFragment"
        android:name="com.justin.productcatalog.ui.presentation.product.UpdateProductFragment"
        android:label="fragment_update_product"
        tools:layout="@layout/fragment_update_product">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.justin.productcatalog.ui.presentation.credential.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.justin.productcatalog.ui.presentation.credential.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
</navigation>