<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.justin.productcatalog.ui.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_updateProductFragment"
            app:destination="@id/updateProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.justin.productcatalog.ui.presentation.product.AddProductFragment"
        android:label="AddProductFragment"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/updateProductFragment"
        android:name="com.justin.productcatalog.ui.presentation.product.UpdateProductFragment"
        android:label="fragment_update_product"
        tools:layout="@layout/fragment_update_product">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>