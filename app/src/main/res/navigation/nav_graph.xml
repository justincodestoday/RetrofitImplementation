<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <action
        android:id="@+id/to_home_fragment"
        app:destination="@+id/homeFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.productcatalogue.ui.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_home_to_addProduct"
            app:destination="@id/addProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.productcatalogue.ui.presentation.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_details_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_details_to_editProduct"
            app:destination="@id/editProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.productcatalogue.ui.presentation.product.AddProductFragment"
        android:label="AddProductFragment"
        tools:layout="@layout/fragment_add_product">
        <action
            android:id="@+id/action_addProduct_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProductFragment"
        android:name="com.example.productcatalogue.ui.presentation.product.EditProductFragment"
        android:label="fragment_edit_product"
        tools:layout="@layout/fragment_add_product">
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_editProduct_to_details"
            app:destination="@id/detailsFragment" />
    </fragment>
</navigation>
