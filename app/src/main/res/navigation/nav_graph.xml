<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <action
        android:id="@+id/to_home_fragment"
        app:destination="@+id/homeFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nathalie.productcatalogue.ui.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_home_to_addProduct"
            app:destination="@id/addProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.nathalie.productcatalogue.ui.presentation.product.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_productDetail_to_editProduct"
            app:destination="@id/editProductFragment2" />
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.nathalie.productcatalogue.ui.presentation.product.AddProductFragment"
        android:label="AddProductFragment"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/editProductFragment2"
        android:name="com.nathalie.productcatalogue.ui.presentation.product.EditProductFragment"
        android:label="fragment_edit_product"
        tools:layout="@layout/fragment_add_product">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nathalie.productcatalogue.ui.presentation.authentication.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        />
</navigation>